{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "dev:test": "cross-env NODE_ENV=test nodemon src/server.js",
    "start": "node src/server.js",

    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test mocha tests/unit/**/*.test.js --exit",
    "test:integration": "cross-env NODE_ENV=test mocha --file tests/integration/setup.js tests/integration/**/*.test.js --exit",
    "test:setup": "npm run db:reset:test && npm run db:migrate:test && npm run db:seed:test",

    "db:create": "sequelize db:create",
    "db:drop": "sequelize db:drop",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:seed": "sequelize db:seed:all",
    "db:seed:undo": "sequelize db:seed:undo:all",

    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed",

    "db:create:dev": "cross-env NODE_ENV=development npm run db:create",
    "db:drop:dev": "cross-env NODE_ENV=development npm run db:drop",
    "db:migrate:dev": "cross-env NODE_ENV=development npm run db:migrate",
    "db:migrate:undo:dev": "cross-env NODE_ENV=development npm run db:migrate:undo",
    "db:seed:dev": "cross-env NODE_ENV=development npm run db:seed",
    "db:seed:undo:dev": "cross-env NODE_ENV=development npm run db:seed:undo",

    "db:reset:dev": "npm run db:drop:dev && npm run db:create:dev && npm run db:migrate:dev && npm run db:seed:dev",

    "db:create:test": "cross-env NODE_ENV=test npm run db:create",
    "db:drop:test": "cross-env NODE_ENV=test npm run db:drop",
    "db:migrate:test": "cross-env NODE_ENV=test npm run db:migrate",
    "db:migrate:undo:test": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "db:seed:test": "cross-env NODE_ENV=test npm run db:seed",
    "db:seed:undo:test": "cross-env NODE_ENV=test npm run db:seed:undo",
    
    "db:reset:test": "npm run db:drop:test && npm run db:create:test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.13.0",
    "sequelize": "^6.37.6",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "cross-env": "^7.0.3",
    "mocha": "8.4.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.2",
    "sinon": "^19.0.4"
  }
}
